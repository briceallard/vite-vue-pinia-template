{
  "name": "vite-template",
  "private": true,
  "version": "0.0.0",
  "author": "Brice Allard",
  "main": "electron/electron.js",
  "scripts": {
    "dev": "vite --host",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "test:unit": "vitest --environment jsdom --coverage",
    "electron": "wait-on tcp:8080 && cross-env IS_DEV=true electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run electron\"",
    "electron:builder": "electron-builder",
    "build:for:electron": "vue-tsc --noEmit && cross-env ELECTRON=true vite build",
    "app:build": "npm run build:for:electron && npm run electron:builder"
  },
  "dependencies": {
    "@vuelidate/core": "^2.0.0-alpha.42",
    "@vuelidate/validators": "^2.0.0-alpha.30",
    "axios": "^0.27.2",
    "pinia": "^2.0.16",
    "pinia-plugin-persistedstate": "^1.6.3",
    "uuid": "^8.3.2",
    "vue": "^3.2.25",
    "vue-logger-plugin": "^2.2.3",
    "vue-router": "^4.0.13"
  },
  "devDependencies": {
    "@headlessui/vue": "^1.6.7",
    "@heroicons/vue": "^1.0.6",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/line-clamp": "^0.4.0",
    "@tailwindcss/typography": "^0.5.4",
    "@testing-library/vue": "^6.6.1",
    "@types/uuid": "^8.3.4",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vitest/coverage-c8": "^0.22.1",
    "@vue/test-utils": "^2.0.0",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.2",
    "cross-env": "^7.0.3",
    "electron": "^19.0.8",
    "electron-builder": "^23.1.0",
    "jsdom": "^20.0.0",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.12",
    "sass": "^1.53.0",
    "tailwindcss": "^3.1.6",
    "typescript": "^4.7.4",
    "vite": "^2.9.9",
    "vitest": "^0.22.1",
    "vue-tsc": "^0.34.7",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "com.my-website.my-app",
    "productName": "MyApp",
    "copyright": "Copyright Â© 2019 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  }
}
